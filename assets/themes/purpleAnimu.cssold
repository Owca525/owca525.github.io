  --background-800: #2c303a;
  --background-900: #16181d;
  --background-950: #0b0c0e;

  --primary-50: #f0f0f5;
  --primary-100: #e0e2eb;
  --primary-200: #c1c4d7;
  --primary-300: #a2a7c3;
  --primary-400: #8489ae;
  --primary-500: #656c9a;
  --primary-600: #51567b;
  --primary-700: #3c415d;
  --primary-800: #282b3e;
  --primary-900: #14161f;
  --primary-950: #0a0b0f;

  --secondary-50: #eeeff6;
  --secondary-100: #dee0ed;
  --secondary-200: #bdc0db;
  --secondary-300: #9ca1c9;
  --secondary-400: #7a82b8;
  --secondary-500: #5962a6;
  --secondary-600: #474f85;
  --secondary-700: #363b63;
  --secondary-800: #242742;
  --secondary-900: #121421;
  --secondary-950: #090a11;

  --accent-50: #edeef7;
  --accent-100: #dcdeef;
  --accent-200: #b8bde0;
  --accent-300: #959cd0;
  --accent-400: #717bc1;
  --accent-500: #4e59b1;
  --accent-600: #3e488e;
  --accent-700: #2f366a;
  --accent-800: #1f2447;
  --accent-900: #101223;
  --accent-950: #080912;
